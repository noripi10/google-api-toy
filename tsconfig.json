{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    // "lib": [],
    "sourceMap": true,
    "outDir": "./dist",
    // "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "compileOnSave": false
}
